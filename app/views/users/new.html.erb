<%= form_for @user, controller: 'users', action: 'create' do |f| %>
    <%= f.label :username %>
    <%= f.text_field :name %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.label :bio %>
    <%= f.text_area :bio %><br>

    <%= f.submit %>
<% end %>