<main>
    <h1>All Products</h1>
    <ul>
        <% @products.each do |product| %>
            <div class="card">
                <div class="card__body">
                    <div class="half">
                        <div class="text">
                            <h2><%= product.name %></h3>
                            
                            <% product.product_categories.each do |product_category| %>
                                <p class="name"><%= link_to product_category.category.name, category_path(product_category.category) %></p>
                            <% end %>
                            <p class="price">$<%= product.price %></p>
                            
                        </div>
                    </div>
                    <div class="half">
                        <div class="description">
                            <p><%= product.description %></p>
                        </div>
                        <div class="view__button">
                            <%= link_to "View Full Page", product_path(product) %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </ul>
</main>
