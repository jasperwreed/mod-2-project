<h1>Hi there, <%=@user.username %>!</h1>
<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
<% end %>

<h2>Products</h2>

<ul>
    <% @products.each do |product| %>
            <li>
                Name: <%= link_to product.name, product_path(product) %><br>
                Price: $<%= product.price %><br>
                Category: <% product.product_categories.each do |product_category| %>
                    # worry about this later
                    <%= link_to product_category.category.name, category_path(product_category.category) %><br>
                <% end %>
            </li>

    <% end %>
</ul>