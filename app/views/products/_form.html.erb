<%= form_for @product do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :price %><br>
    <%= f.number_field :price %><br><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>


    <%= f.label :owner %><br>
    <%= f.collection_select :owner_id, User.all, :id, :name %><br><br>

    <%= f.label :category %><br>
    <%= f.collection_check_boxes :category_ids, @category, :id, :name %><br><br>

    <%= f.fields_for :categories, product.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>



    <%= f.submit %>
<% end %>