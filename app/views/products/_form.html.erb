
<main>
    <div class="card">
        <div class="card__body">
            <%= form_for @product do |f| %>
                <%= f.label :name %><br>
                <%= f.text_field :name %><br><br>

                <%= f.label :price %><br>
                <%= f.number_field :price, step: 0.01 %><br><br>

                <%= f.label :description %><br>
                <%= f.text_area :description %><br><br>


                <%= f.label :owner %><br>
                <%= f.collection_select :owner_id, User.all, :id, :username %><br><br>

                
                <%= f.label :category %><br>
                <%= f.collection_check_boxes :category_ids, @category, :id, :name %>

                <%= f.submit %>
            <% end %>
            <% if flash[:errors] %>
                <% flash[:errors].each do |error| %>
                    <p style="color:red"><%= error %></p>
                <% end %>
            <% end %>
        </div>
    </div>
</main>